<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:layout_gravity="center"
    android:background="@color/background"
    android:gravity="center">

    <EditText
        android:id="@+id/etxtUserName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:hint="Enter User Name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:drawableLeft="@drawable/baseline_person_black_18dp"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/etxtEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_below="@+id/etxtUserName"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_mail_black_18dp"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etxtPhoneNumber"
        android:layout_width="300dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_below="@+id/etxtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_call_black_18dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etxtPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:layout_below="@+id/etxtPhoneNumber"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_lock_black_18dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/etxtConfirmpassword"
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_height="50dp"
        android:layout_below="@+id/etxtPassword"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_lock_black_18dp"
        android:ems="10"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
         />

    <EditText
        android:id="@+id/etxtAddress"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:hint="Enter Address"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textColor="#000000"
        android:layout_below="@+id/etxtConfirmpassword"
      android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_home_black_24dp"/>
       />

    <Button
        android:id="@+id/btnSubmit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxtAddress"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:text="Submit" />




</RelativeLayout>