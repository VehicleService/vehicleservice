<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BillActivity"
    android:background="@color/background"
    android:layout_gravity="center"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name:"
        android:layout_marginLeft="10dp"
        android:id="@+id/txtname"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="name"
        android:id="@+id/etxtname"
        android:layout_toRightOf="@+id/txtname"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:text="Phone Number:"
        android:id="@+id/txtphone"
        android:layout_below="@+id/etxtname"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/etxtphone"
        android:layout_toRightOf="@+id/txtphone"
        android:layout_below="@+id/etxtname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:text="Address:"
        android:id="@+id/txtadd"
        android:layout_below="@+id/etxtphone"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/txtadd"
        android:text="address"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/etxtphone"

        android:id="@+id/etxtadd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"

        android:text="Estimation:"
        android:id="@+id/txtcost"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/etxtadd"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/etxtcost"
        android:layout_toRightOf="@+id/txtcost"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/etxtadd"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="100"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="number"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="OK"
        android:id="@+id/btnagree"
        android:layout_below="@+id/etxtcost"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="CANCEL"
        android:id="@+id/btndisagree"
        android:layout_below="@id/etxtcost"
        android:layout_toRightOf="@+id/btnagree"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>