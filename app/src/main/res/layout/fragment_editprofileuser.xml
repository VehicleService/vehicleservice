<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Editprofileuser">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/editprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GarageActivity.RegisterActivityG"
        android:layout_gravity="center"
        android:background="@color/background"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/edit_profile" />

        <EditText
            android:id="@+id/etxtUserName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_below="@+id/image"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:hint="Enter UserName"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:drawableLeft="@drawable/baseline_person_black_18dp"
            android:inputType="textPersonName"
            android:background="@color/field_back"
            />
        <EditText
            android:id="@+id/etxtEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:textColor="#000000"
            android:layout_below="@+id/etxtUserName"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/baseline_mail_black_18dp"
            android:hint="Enter Email Address"
            android:background="@color/field_back"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etxtPhoneNumber"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_below="@+id/etxtEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/baseline_call_black_18dp"
            android:ems="10"
            android:textColor="#000000"
            android:hint="Enter Phone Number"
            android:background="@color/field_back"
            android:inputType="phone" />


        <EditText
            android:id="@+id/etxtAddress"
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:hint="Enter Address"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:textColor="#000000"
            android:layout_below="@+id/etxtPhoneNumber"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/field_back"
            android:drawableLeft="@drawable/baseline_place_black_18dp"/>
        />
        <Button
            android:id="@+id/btnSubmit"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etxtAddress"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Submit" />




    </RelativeLayout>
</FrameLayout>