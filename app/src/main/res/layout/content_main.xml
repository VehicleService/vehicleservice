<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GarageActivity.Main2Activity"
    tools:showIn="@layout/app_bar_main2"
    android:id="@+id/contentMain"
    android:layout_gravity="center"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome"
    android:id="@+id/txtwelcome"
   android:layout_marginLeft="20dp"
    android:layout_marginTop="50dp"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtname"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txtwelcome"
        android:layout_toEndOf="@+id/txtwelcome"
        android:text="Garage Name"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtemail"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txtname"
        android:text="Email:"
        android:layout_toEndOf="@+id/txtwelcome"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtemail"
        android:layout_toEndOf="@+id/txtemail"
        android:layout_below="@+id/txtname"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="email"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtphone"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txtemail"
        android:text="Phone:"
        android:layout_toEndOf="@+id/txtwelcome"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtphone"
        android:layout_toEndOf="@+id/txtphone"
        android:layout_below="@+id/txtemail"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="phone"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtaddress"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txtphone"
        android:text="Address:"
        android:layout_toEndOf="@+id/txtwelcome"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtaddress"
        android:layout_toEndOf="@+id/txtaddress"
        android:layout_below="@+id/txtphone"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="address"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>